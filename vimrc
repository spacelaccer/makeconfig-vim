set nocompatible
colorscheme elflord

syntax enable
syntax on

filetype indent off
filetype plugin indent on

set nobackup
set noundofile
set nocursorline
set nowrapscan

set encoding=utf-8
set fileencodings=ucs-bom,utf-8,cp936,gb18030,big5,latin1

set number
set ruler
set expandtab
set smarttab
set autochdir
set ignorecase
set smartcase
set incsearch
set hlsearch
set smartindent
set autoindent
set cindent
set showmatch

set backspace=indent,eol,start
set laststatus=2
"set statusline=%-(%<\ %F\ %{&fileformat}\ %{&encoding}\ %l/%L%)


set tabstop=8
set softtabstop=4
set shiftwidth=4
set scrolloff=3
